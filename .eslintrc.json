{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error","double"],
        "no-console": "off",
        "global-require": "off",
        "import/no-dynamic-require": 0,
        "max-len": ["off"],
        "no-restricted-imports": [
            "error", {"patterns": ["@material-ui/*/*/*", "!@material-ui/core/test-utils/*"]}
          ],
        "react/require-default-props": [0],
        "react/jsx-props-no-spreading": "off",
        "react/prop-types": "off"
    }
}
